# ===================================
# STC Transfer Frontend Configuration
# ===================================

# API Configuration
# -----------------
# URL backend API
VITE_API_URL=https://srs.faruk.io/api

# URL для Socket.IO соединения
VITE_SOCKET_URL=https://srs.faruk.io

# Telegram Configuration
# ----------------------
# Username основного (клиентского) Telegram бота (без @)
VITE_TELEGRAM_BOT_USERNAME=ваш_бот_username

# Username водительского Telegram бота (если используется отдельный)
# VITE_TELEGRAM_DRIVER_BOT_USERNAME=ваш_водительский_бот_username

# App Configuration
# -----------------
# Название приложения
VITE_APP_NAME="STC Transfer"

# URL приложения
VITE_APP_URL=https://srs.faruk.io

# Окружение: development, production
VITE_NODE_ENV=production

# Maps Configuration
# ------------------
# Yandex Maps API Key (если используется)
# VITE_YANDEX_MAPS_API_KEY=ваш_ключ

# Google Maps API Key (если используется)
# VITE_GOOGLE_MAPS_API_KEY=ваш_ключ

# По умолчанию используется OpenStreetMap (не требует ключа)

# Feature Flags
# -------------
# Включить/выключить определенные функции
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LIVE_TRACKING=true
VITE_ENABLE_DRIVER_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics (опционально)
# ------------------------
# Google Analytics ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Yandex Metrika ID
# VITE_YANDEX_METRIKA_ID=XXXXXXXX

# Sentry DSN для отслеживания ошибок
# VITE_SENTRY_DSN=https://your-sentry-dsn

# UI Configuration
# ----------------
# Язык по умолчанию
VITE_DEFAULT_LANGUAGE=ru

# Доступные языки (через запятую)
VITE_AVAILABLE_LANGUAGES=ru,uz,en

# Тема по умолчанию: light, dark, auto
VITE_DEFAULT_THEME=light

# Debug
# -----
# Включить debug режим (только для development)
VITE_DEBUG=false

# Показывать детальные логи в консоли
VITE_VERBOSE_LOGGING=false

