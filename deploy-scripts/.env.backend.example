# ===================================
# STC Transfer Backend Configuration
# ===================================

# Database Configuration
# ----------------------
# PostgreSQL connection string
DATABASE_URL="postgresql://stc_user:ВАШ_ПАРОЛЬ_ЗДЕСЬ@localhost:5432/stc_transfer"

# Telegram Bot Configuration
# ---------------------------
# Основной (клиентский) Telegram бот токен
# Получите токен у @BotFather
TELEGRAM_BOT_TOKEN="ВАШ_ТОКЕН_КЛИЕНТСКОГО_БОТА"

# Водительский Telegram бот токен (если используется отдельный бот)
# TELEGRAM_DRIVER_BOT_TOKEN="ВАШ_ТОКЕН_ВОДИТЕЛЬСКОГО_БОТА"

# URL для Telegram webhook
# Должен быть HTTPS и доступен из интернета
TELEGRAM_WEBHOOK_URL="https://srs.faruk.io"

# Server Configuration
# --------------------
# Порт для backend сервера
PORT=3001

# Окружение: development, production, test
NODE_ENV=production

# JWT Configuration
# -----------------
# Секретный ключ для подписи JWT токенов
# ВАЖНО: Сгенерируйте уникальный ключ!
# Команда для генерации: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="СГЕНЕРИРУЙТЕ_СЛУЧАЙНЫЙ_КЛЮЧ_ЗДЕСЬ_64_СИМВОЛА"

# Время жизни JWT токена (например: 7d, 24h, 60m)
JWT_EXPIRES_IN="7d"

# CORS Configuration
# ------------------
# Разрешенные источники для CORS (через запятую)
ALLOWED_ORIGINS="https://srs.faruk.io"

# Rate Limiting
# -------------
# Окно времени для rate limiting в миллисекундах (15 минут)
RATE_LIMIT_WINDOW_MS=900000

# Максимальное количество запросов в окне времени
RATE_LIMIT_MAX_REQUESTS=100

# Wialon Integration (опционально)
# ---------------------------------
# Если используете интеграцию с Wialon для отслеживания
# WIALON_TOKEN="ваш_токен_wialon"
# WIALON_BASE_URL="https://hst-api.wialon.com"

# File Upload Configuration
# --------------------------
# Максимальный размер загружаемых файлов в байтах (50MB)
MAX_FILE_SIZE=52428800

# Директория для загруженных файлов
UPLOAD_DIR="./uploads"

# Email Configuration (опционально)
# ----------------------------------
# Если нужна отправка email уведомлений
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="STC Transfer <noreply@srs.faruk.io>"

# Logging
# -------
# Уровень логирования: error, warn, info, debug
LOG_LEVEL="info"

# Директория для логов
LOG_DIR="./logs"

# Admin Configuration
# -------------------
# URL админ-панели (для уведомлений и ссылок)
ADMIN_URL="https://srs.faruk.io/admin"

# Session Configuration
# ---------------------
# Секрет для сессий (если используется)
# SESSION_SECRET="ДРУГОЙ_СЛУЧАЙНЫЙ_КЛЮЧ_ЗДЕСЬ"

# Redis Configuration (опционально)
# ----------------------------------
# Если используете Redis для кеширования или сессий
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD=""

# Monitoring (опционально)
# -------------------------
# Sentry для отслеживания ошибок
# SENTRY_DSN="https://your-sentry-dsn"

# New Relic для мониторинга производительности
# NEW_RELIC_LICENSE_KEY="your-license-key"
# NEW_RELIC_APP_NAME="STC Transfer Backend"

# Feature Flags
# -------------
# Включить/выключить определенные функции
ENABLE_DRIVER_NOTIFICATIONS=true
ENABLE_CLIENT_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_WIALON_TRACKING=false

# Timezone
# --------
# Временная зона для сервера
TZ="Asia/Samarkand"

